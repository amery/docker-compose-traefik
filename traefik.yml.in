# vim: ft=yaml ts=2 sw=2 et:
entryPoints:
  web:
    address: :80
  websecure:
    address: :443
    http:
      tls:
        certResolver: letsencrypt

api:
  insecure: true

accessLog: {}

certificatesResolvers:
  letsencrypt:
    acme:
      email: @@ACME_EMAIL@@
      httpChallenge:
        entryPoint: http

providers:
  docker:
    watch: true
    network: @@TRAEFIK_BRIDGE@@
    exposedByDefault: false
